{% extends 'back/base.html.twig' %}

{% block body %}
<div class="content-page">
    <div class="content">
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <h1>Liste des courses</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <table class="table">
                        <thead>
                            <tr>
                              
                                <th>Destination</th>
                                <th>Départ</th>
                                <th>Date de la course</th>
                                <th>Nombre de personnes</th>
                        
                                <th>Voiture</th>
                             
                             <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for course in courses %}
                            <tr>
                               
                                <td>{{ course.destination }}</td>
                                <td>{{ course.depart }}</td>
                                <td>{{ course.dateCourse|date('Y-m-d ') }}</td>
                                <td>{{ course.nbPersonne }}</td>
                        
                                <td>{{ course.idVoiture.modele }}</td>

                                  <td>
                   
                           {% if course.dateCourse > date('now') %} Pas encore {% else %} Terminée {% endif %}
                           </td>
                     
                           
                             
                                <td>
                                    <a href="{{ path('course_show', {'id': course.id}) }}" class="btn btn-info">Afficher</a>
                    
                                    <a href="{{ path('course_delete', {'id': course.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette course ?')">Supprimer</a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

         

        </div> <!-- container -->
    </div> <!-- content -->
</div>
{% endblock %}
