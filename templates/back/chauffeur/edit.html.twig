{% extends 'back/base.html.twig' %}

{% block title %}Modifier les informations du chauffeur{% endblock %}

{% block body %}
<div class="content-page">
    <div class="content">
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <h1>Modifier le Chauffeur</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_row(form.nom) }}
                        {% if form_errors(form.nom)|length > 0 %}
                        <div class="alert alert-danger">
                            <ul>
                                {% for error in form_errors(form.nom) %}
                                <li>{{ error.message }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.prenom) }}
                        {% if form_errors(form.prenom)|length > 0 %}
