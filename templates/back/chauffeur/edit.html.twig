                                {% endfor %}
                            </ul>
                        </div>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.ville) }}
                        {% if form_errors(form.ville)|length > 0 %}
                        <div class="alert alert-danger">
                            <ul>
                                {% for error in form_errors(form.ville) %}
                                <li>{{ error.message }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                        {% endif %}
                    </div>
                   

                    <div class="mb-3">
                        {{ form_row(form.age) }}
                        {% if form_errors(form.age) %}
                        <div class="alert alert-danger">
                            <ul>
                                {% for error in form_errors(form.age) %}
                                <li>{{ error.message }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.salaire) }}
                        {% if form_errors(form.salaire) %}
