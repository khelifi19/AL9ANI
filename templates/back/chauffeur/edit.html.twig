                                {% endfor %}
                            </ul>
                        </div>
                        {% endif %}
                    </div>
    <div class="mt-4">
                       
                        <button type="submit" class="btn btn-primary">Modifier</button>
                             <a href="{{ path('app_chauffeur_index') }}" class="btn btn-secondary ms-2">Retour Ã  la liste des Chauffeurs</a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

        </div> <!-- container -->
    </div> <!-- content -->
</div>
{% endblock %}
