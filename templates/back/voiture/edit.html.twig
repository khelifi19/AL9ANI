{% extends 'back/base.html.twig' %}

{% block title %}Modifier la voiture{% endblock %}

{% block body %}
<div class="content-page">
    <div class="content">
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <h1>Modifier la voiture</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_row(form.modele) }}
                        {% for error in form_errors(form.modele) %}
                        <div class="alert alert-danger">
                            {{ error.message }}
                        </div>
                        {% endfor %}
                    </div>

                 

                    <div class="mb-3">
                        {{ form_row(form.disponibilite) }}
                        {% for error in form_errors(form.disponibilite) %}
                        <div class="alert alert-danger">
                            {{ error.message }}
                        </div>
                        {% endfor %}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.matricule) }}
                        {% for error in form_errors(form.matricule) %}
                        <div class="alert alert-danger">
                            {{ error.message }}
                        </div>
                        {% endfor %}
                    </div>
                     <div class="mb-3">
                        {# Affichage de errorMessage #}
                        {% if errorMessage %}
                            <div class="alert alert-danger" role="alert">
                                {{ errorMessage }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.description) }}
                        {% for error in form_errors(form.description) %}
                        <div class="alert alert-danger">
                            {{ error.message }}
                        </div>
                        {% endfor %}
                    </div>
                    
   <div class="mb-3">
                        {{ form_row(form.chauffeur) }}
                        {% if form_errors(form.chauffeur)|length > 0 %}
                        <div class="alert alert-danger">
                            <ul>
                                {% for error in form_errors(form.chauffeur) %}
                                <li>{{ error.message }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                        {% endif %}
                    </div>
                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">Modifier</button>
                        <a href="{{ path('voiture_index') }}" class="btn btn-secondary ms-2">Retour Ã  la liste des voitures</a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

        </div> <!-- container -->
    </div> <!-- content -->
</div>
{% endblock %}
