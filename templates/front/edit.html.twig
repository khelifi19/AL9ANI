{% extends 'baseFront.html.twig' %}

{% block title %}Modifier une Course{% endblock %}

{% block content %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">Modifier Votre Course</div>
                <div class="card-body">
                    <h1 class="card-title text-center mb-4">Modifier une Course</h1>
                    {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_row(form.destination, {'attr': {'class': 'form-control', 'placeholder': 'Votre destination'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.depart, {'attr': {'class': 'form-control', 'placeholder': 'Votre adresse de d√©part'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.date, {'attr': {'class': 'form-control', 'placeholder': 'Date de la course'}}) }}
                        {% if form_errors(form.date) %}
                        <div class="alert alert-danger">{{ form_errors(form.date) }}</div>
                        {% endif %}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.nbPersonne, {'attr': {'class': 'form-control', 'placeholder': 'Nombre de personnes'}}) }}
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-danger">Enregistrer les modifications</button>
                        <a href="{{ path('courseUser_delete', {'id': course.id}) }}" class="btn btn-secondary">Annuler la course</a>
                            <a href="javascript:history.go(-1);" class="btn btn-danger"><i class="bi bi-arrow-left"></i> Retour</a>
                    </div>
                    {{ form_end(form) }}
                  
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
