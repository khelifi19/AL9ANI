{% extends 'baseFront.html.twig' %}

{% block title %}Détails de votre Postule{% endblock %}

{% block content %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">Détails de votre Postule</div>
                <div class="card-body">
                    <h1 class="card-title text-center mb-4">Détails de la Postule</h1>
                    <div class="mb-3">
                        <strong>Nom:</strong> {{ postule.nom }}
                    </div>
                    <div class="mb-3">
                        <strong>Prénom:</strong> {{ postule.prenom }}
                    </div>
                    <div class="mb-3">
                        <strong>Age:</strong> {{ postule.age }}
                    </div>
                    <div class="mb-3">
                        <strong>Ville:</strong> {{ postule.ville }}
                    </div>
                    <div class="mb-3">
                        <strong>Numéro:</strong> {{ postule.numero }}
                    </div>
                    <div class="mb-3">
                        <strong>Email:</strong> {{ postule.email }}
                    </div>
                    <div class="text-center">
                        <a href="{{ path('app_postule_edit', {'id': postule.id}) }}" class="btn btn-secondary">Modifier</a>
       <a href="{{ path('courseUser_index') }}" class="btn btn-secondary">Continuer</a>
                        <a href="{{ path('app_postule_delete2', {'id': postule.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette postule ?')">Annuler</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
