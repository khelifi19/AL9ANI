    <style>
        h2 {
            color: #444444;
        }

        .align-center {
            text-align: center;
        }

        .align-right {
            text-align: right;
        }

        table {
            width: 100%;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 7px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

