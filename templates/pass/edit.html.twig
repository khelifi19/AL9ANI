        .form-center {
            text-align: center;
            margin: 0 auto; /* Centering the box horizontally */
            width: 50%; /* Adjust the width as needed */
        }

        .text-center {
            text-align: center; /* Centering text within the form row */
        }
    </style>
{% endblock %}

{% block navbar %}
    {{ parent() }}
{% endblock %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}
    <br><br><br><br><br><br><br>

    <div class="form-center">
        {{ form_start(form) }}
        {{ form_row(form.prixPass, {'attr': {'class': 'form-control mb-3 text-center'}}) }}<br>
        {{ form_row(form.type, {'attr': {'class': 'form-control mb-3 text-center'}}) }}<br>
        {{ form_row(form.evenement, {'attr': {'class': 'form-control mb-3 text-center'}}) }} {# Adjust this line to include the evenement field #}
    </div>

    <br>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">
            Confirm
        </button>
    </div>

    {{ form_end(form) }}
    </div>
    </div>
    </div>

